<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Minis Menu"
        android:id="@+id/lblMenu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Add Paper Journal"
        android:id="@+id/btnAddPaperJournal"
        android:layout_below="@+id/btnJournals"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Popular Journals"
        android:id="@+id/btnPopularJournals"
        android:layout_below="@+id/btnAddPaperJournal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome"
        android:id="@+id/lblWelcome"
        android:layout_below="@+id/lblMenu"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Journals"
        android:id="@+id/btnJournals"
        android:layout_below="@+id/lblWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp" />

</RelativeLayout>